.user-main {
  padding-bottom: 20px;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.user-main .avatar-block {
  height: 180px;
  display: flex;
  align-items: center;
  padding: 0 20px;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
}
.user-main .avatar-block::before {
  pointer-events: none;
  content: "";
  height: 100%;
  object-fit: cover;
  width: 100%;
  display: block;
  background: linear-gradient(130deg, #ff7a18, #af002d 41.07%, #319197 76.05%);
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.8;
}
.user-main .avatar-block .avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin: 0 auto;
  margin-right: 20px;
  padding: 4px;
  box-sizing: border-box;
  background: linear-gradient(130deg, #ff7a18, #af002d 41.07%, #319197 76.05%);
}
.user-main .avatar-block .avatar .img {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-main .avatar-block .avatar .img .avatar-img {
  width: calc(100% - 4px);
  height: calc(100% - 4px);
  border-radius: 50%;
  object-fit: cover;
}
.user-main .avatar-block .avatar .img .iconfont {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 22px;
}
.user-main .avatar-block .avatar .img .avatar-img-icon {
  font-size: 62px;
}
.user-main .avatar-block .avatar .avatar-item {
  position: relative;
  text-align: center;
  display: block;
  z-index: 2;
  color: white;
}
.user-main .avatar-block .avatar .nick-name {
  font-size: 14px;
  margin-top: 4px;
}
.user-main .avatar-block .info {
  flex: 1;
  height: 100%;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
}
.user-main .avatar-block .info .info-item {
  display: flex;
  align-items: center;
  color: white;
  font-size: 12px;
  margin-bottom: 4px;
}
.user-main .avatar-block .info .info-item.slogan {
  margin-right: 30px;
  margin-top: 10px;
}
.user-main .avatar-block .info .user-banner {
  width: 74px;
  height: 104px;
  flex: 1;
  position: absolute;
  right: -34px;
  bottom: 22px;
}
.user-main .container-block {
  margin: 20px;
  background-color: white;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  padding: 0 10px 0 20px;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}
.user-main .container-block .container-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
}
.user-main .container-block .container-item-icon {
  margin-right: 10px;
}
.user-main .container-block .container-item-icon .iconfont {
  font-size: 24px;
}
.user-main .container-block .container-item-content {
  flex: 1;
}
.user-main .container-block .container-item-content-title {
  font-size: 14px;
}
.user-main .container-block .container-item-content-desc {
  font-size: 12px;
  color: #999;
}
.user-main .container-block .container-item-arrow .iconfont {
  font-size: 20px;
  color: #ccc;
}
.user-main .container-block .container-item + .container-item {
  border-top: 1px solid #f5f5f5;
}
.user-main .user-block {
  margin: -20px 20px 20px;
  padding: 0;
}
.user-main .user-block .user-item {
  display: flex;
  align-items: center;
  padding: 0 20px;
  box-sizing: border-box;
  height: 60px;
}
.user-main .user-block .user-item .user-item-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}
.user-main .user-block .user-item .user-item-icon .iconfont {
  font-size: 40px;
}
.user-main .user-block .user-item .user-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user-main .user-block .user-item .user-item-content .user-item-content-title {
  font-size: 14px;
  color: #333;
}
.user-main .user-block .user-item .user-item-content .user-item-content-desc {
  font-size: 12px;
  color: #999;
}
.user-main .user-block .user-item .user-item-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6px 10px;
  font-size: 12px;
  color: #999;
  border: 1px solid #7d9af3;
  border-radius: 15px;
}
.user-main .user-block .user-item .user-item-arrow .iconfont {
  margin-right: 10px;
}
.user-main ::-webkit-scrollbar {
  width: 0px;
  height: 0px;
  color: transparent;
}
.avatar-popup .fui-custom__wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  padding: 12px 0;
  border-bottom: 1px solid #f5f5f5;
}
.avatar-popup .fui-custom__wrap .avatar-img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  object-fit: cover;
}
.avatar-popup .fui-custom__wrap .avatar-img-icon {
  font-size: 30px;
}