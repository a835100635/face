.container {
  background-color: rgba(0, 0, 0, 0.04);
}
.container .swiper-main {
  height: 180px;
  box-shadow: 0 0px 10px #333;
}
.container .swiper-main .swiper {
  height: 100%;
}
.container .swiper-main .swiper .image-wrapper {
  height: 100%;
}
.container .swiper-main .swiper .image-wrapper .loaded {
  height: 100%;
  width: 100%;
  object-fit: cover;
}
.container .category-main {
  box-shadow: 0 0 10px #ccc;
  margin-top: 16px;
  padding: 0 20px;
  background-color: #fff;
  overflow: hidden;
}
.container .category-main .category-item {
  margin: 20px 0;
}
.container .category-main .category-item .title {
  padding: 0;
}
.container .category-main .category-item .item-wrap {
  display: flex;
  flex-wrap: wrap;
}
.container .category-main .category-item .item-wrap .item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 33.3333333333%;
  padding: 10px;
  box-sizing: border-box;
}
.container .category-main .category-item .item-wrap .item .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100px;
  width: 100px;
  border-radius: 10px;
  box-shadow: 0px 0px 6px #CCCCCC;
}
.container .category-main .category-item .item-wrap .item .content .title {
  font-size: 14px;
  margin: 6px 0;
}
.container .category-main .category-item .item-wrap .item .content .iconfont {
  font-size: 24px;
}
.container .category-main .category-item .item-wrap .item .content .count {
  font-size: 12px;
  padding: 0 10px;
  border-radius: 5px;
  background-color: #cadbfc;
  color: #427df7;
}